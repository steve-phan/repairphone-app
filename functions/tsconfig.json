    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true /* Need import * as argument from '/path/' */,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": ["src"]
}
